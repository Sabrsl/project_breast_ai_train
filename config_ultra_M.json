{
  "project_info": {
    "name": "BreastAI Ultra-Performance CPU",
    "version": "3.3.1-ULTRA-M",
    "description": "Configuration optimale EfficientNetV2-M pour qualit√© clinique maximale",
    "profile": "Clinical Grade - Medium Model (50 days)",
    "author": "BreastAI Team",
    "created": "2024-09-30"
  },
  
  "paths": {
    "data_dir": "./data",
    "checkpoint_dir": "./checkpoints",
    "export_dir": "./exports",
    "logs_dir": "./logs"
  },

  "model": {
    "architecture": "efficientnetv2_m",
    "pretrained": true,
    "num_classes": 3,
    "dropout_rate": 0.45,
    "use_cbam": true,
    "cbam_reduction": 16,
    "progressive_unfreezing": {
      "enabled": true,
      "phase1_epochs": 8,
      "phase2_epochs": 20,
      "phase3_epochs": 40,
      "phase4_epochs": 80,
      "phase2_unfreeze_percent": 0.25,
      "phase3_unfreeze_percent": 0.50,
      "lr_reduction_phase2": 0.5,
      "lr_reduction_phase3": 0.3,
      "lr_reduction_phase4": 0.1
    }
  },
  
  "data": {
    "image_size": 512,
    "batch_size": 4,
    "gradient_accumulation_steps": 4,
    "num_workers": 2,
    "pin_memory": false,
    "augmentation": {
      "horizontal_flip": 0.5,
      "vertical_flip": 0.3,
      "rotation": 15,
      "brightness": 0.2,
      "contrast": 0.2,
      "use_clahe": true
    }
  },
  
  "training": {
    "epochs": 80,
    "learning_rate": 0.0003,
    "weight_decay": 0.0001,
    "optimizer": "adamw",
    "scheduler": "cosine_warmup_restarts",
    "warmup_epochs": 8,
    "restart_epochs": [25, 50, 70],
    "label_smoothing": 0.12,
    "gradient_clip": 1.0,
    "use_ema": true,
    "ema_decay": 0.9998,
    "focal_loss": {
      "enabled": true,
      "alpha": [0.25, 0.50, 0.25],
      "gamma": 2.5
    }
  },

  "metrics": {
    "primary_metric": "f1_weighted",
    "track_metrics": [
      "accuracy",
      "auc_roc",
      "auc_pr",
      "sensitivity",
      "specificity",
      "ppv",
      "npv",
      "f1_macro",
      "f1_weighted"
    ],
    "clinical_thresholds": {
      "sensitivity_min": 0.96,
      "specificity_min": 0.91,
      "auc_roc_min": 0.955
    }
  },

  "inference": {
    "tta_enabled": true,
    "tta_transforms": [
      "original",
      "horizontal_flip",
      "vertical_flip",
      "rotate_5",
      "brightness_5",
      "contrast_5"
    ],
    "temperature_scaling": true,
    "initial_temperature": 1.3
  },

  "system": {
    "device": "auto",
    "seed": 42,
    "deterministic": true,
    "num_threads": 8
  },

  "estimated_time": {
    "phase1_days": 4,
    "phase2_days": 10,
    "phase3_days": 14,
    "phase4_days": 22,
    "total_days": 50,
    "total_weeks": 7
  },

  "expected_performance": {
    "auc_roc": "0.975-0.978",
    "sensitivity": "0.965-0.970",
    "specificity": "0.935-0.945",
    "f1_weighted": "0.96-0.97"
  }
}
